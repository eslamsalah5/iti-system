@model Department
@{
	ViewBag.Title = "Details";
}

    <script>
        function validateDelete() {
            return confirm('Are you sure you want to delete this Department?');
        }
    </script>
    <h1>
        Department details
    </h1>
    <h4>@Model.DeptId</h4>
    <h4>@Model.Name</h4>
    <h4>@Model.Capacity</h4>
    <br />
    <br />
@if (User.IsInRole("Admin"))
{
    <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.DeptId" class="btn btn-primary ">Edit</a>
    <a onclick="return validateDelete();" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.DeptId" class="btn btn-danger ">Delete</a>
}