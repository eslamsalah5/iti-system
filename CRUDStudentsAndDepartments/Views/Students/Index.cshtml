@model IEnumerable<Student>
@{
	ViewBag.Title = "Students";
}

<div class="d-flex justify-content-end p-3">
    <a asp-action="Create" asp-controller="Students" class="btn btn-primary">Add New Student</a>
</div>
<table class="table table-border table-hover">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Student Age</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Pleaze Add any Students</td>
            </tr>
        }
        else
        {
            @foreach (Student student in Model)
            {
                <tr onclick="location.href='/Students/details/@student.StdId';">
                    <td>
                        @student.Name
                    </td>
                    <td>
                        @student.Age
                    </td>
                    <td>
                        @student.Department.Name
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

