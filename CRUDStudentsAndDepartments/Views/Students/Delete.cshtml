@model Student
@{
	ViewBag.Title = "Delete Student";
}

    <div class="container mt-5">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title">Delete Confirmation</h5>
            </div>
            <div class="card-body">
                <!-- Alert Message -->
                <div class="alert alert-danger">
                    Are you sure you want to delete <strong>@Model.Name</strong>?
                </div>

                <!-- Form -->
                <form method="post">
                    <input type="hidden" asp-for="StdId" />
                    <div class="text-right">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Cancel" asp-controller="Students" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
